
		
<% if (Catalog.all.count) > 0 %>

<table class="table table-striped">
  <thead>
    <tr>

		<%= render "shared/table_head", {:col_order_name => "name", :col_name => t(:user_att_name) }%> 
		<th><%= "Marca" %></th>
		<th><%= "Data Inicial" %></th> 
		<th><%= "Data Final" %></th>
		<th><%= "Status" %></th>
		<th style="text-align:center"><%= t(:actions_name) %></th> 
    </tr>
  </thead>
  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
	
        <td><%= catalog.name %></td>
        <td><%= "Marca" %></td>
        <td><%= catalog.beginDate.strftime("%d/%m/%Y") %></td>
        <td><%= catalog.endDate.strftime("%d/%m/%Y") %></td>
		<% status = "Ativo" %>
		<% if catalog.endDate.to_time.to_i < Time.now.to_time.to_i %>
			<% status = "Inativo" %>
		<% end %>	
		<td><%= status %></td>


        <td>
			<div class="btn-group">
				<a class="btn btn-small btn-primary" href="/catalogs/<%= catalog.id %>"><i class="icon-search icon-white"></i>Exibir</a>
				<a class="btn btn-small" href="/catalogs/<%= catalog.id %>/edit"><i class="icon-pencil icon-gray"></i>Editar</a>
				<a class="btn btn-small  btn-danger" href="/catalogs/<%= catalog.id %>" data-confirm="<%= "Deseja remover o Catálogo?" %>" data-method="delete" rel="nofollow"><i class="icon-trash icon-white"></i>Remover</a>
			</div> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<br/><br/>
<div align="center">
	Nenhum catálogo encontrado
</div>	
<% end %>


