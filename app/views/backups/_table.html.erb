
		
<% if (Backup.all.count) > 0 %>
<div id="tabela">
<table class="table table-striped" >
  <thead>
    <tr>

		<th><%= "Número" %></th>
		<th><%= "Data" %></th>
		<th style="text-align:center"><%= t(:actions_name) %></th> 
    </tr>
  </thead>
  <tbody>
    <% @backups.each do |backup| %>
      <tr>
	    <td><%= backup.id %></td>
	    <td><%= backup.date.strftime("%d/%m/%Y")  %></td>		
        <td>
			<div class="btn-group centralizada" style="width:190px">
					<a class="btn btn-primary dropdown-toggle btn-info" data-toggle="dropdown" href="#"> <i class="icon-cog icon-white"></i> Opções
				    <span class="caret"></span>
				  </a>
				  <ul class="dropdown-menu" style='font-size:12'>
					<a  href="/backups/restaurar/<%= backup.id %>" data-confirm="Deseja restaurar o Backup?"><i class="icon-refresh icon"></i>Restaurar</a>
					<a  href="/backups/download/<%= backup.id %>"><i class="icon-download-alt icon"></i>Download</a>
				    </ul>
				<a class="btn btn-small  btn-danger" href="/backups/<%= backup.id %>" data-confirm="<%= "Deseja remover o Backup?" %>" data-method="delete" rel="nofollow"><i class="icon-trash icon-white"></i>Remover</a>
			</div> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= will_paginate @sales, :renderer => BootstrapPagination::Rails, :next_label => "Próxima", :previous_label => "Anterior", :update => 'tabela' %>
<% else %>
<br/><br/>
<div align="center">
	Nenhum Backup Encontrado
</div>	
<% end %>


