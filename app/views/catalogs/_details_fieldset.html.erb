<style>
.dl-horizontal dt {
text-align: right
}
</style>


<fieldset >
	<legend> <%= " " +  @catalog.name %> </legend>
	<div class = "form-actions">
	<dl class="dl-horizontal">
		    <dt>Nome:</dt>
		    <dd> <%= " " +  @catalog.name.to_s %> </dd>
		
		    <dt>Marca:</dt>
		    <dd> <%= " " +  @catalog.brand.name.to_s %> </dd>
		 
		    <dt>Data Inicial:</dt>
		    <dd><%= " " + @catalog.beginDate.strftime("%d/%m/%Y") %> </dd>
		
		 <dt>Data Final:</dt>
		    <dd><%= " " + @catalog.endDate.strftime("%d/%m/%Y") %> </dd>
		 
		</dl>
	</div>
		
	<div align = "right">
		<div class="form" style="float:right">
		<div class=" form btn-group ">
				<a class="btn btn-small btn-primary" href="/catalogs/"><i class="icon-backward icon-white"></i>Voltar</a>
				<a class="btn btn-small" href="/catalogs/<%= @catalog.id %>/edit"><i class="icon-pencil icon-gray"></i>Editar</a>
				<a class="btn btn-small  btn-danger" href="/catalogs/<%= @catalog.id %>" data-confirm="<%= " Deseja remover o Catálogo? " %>" data-method="delete" rel="nofollow"><i class="icon-trash icon-white"></i>Remover</a>
			</div> 
		
	</div>
	</div>
</fieldset>



<%if @catalog.sales.count > 0 %>
<fieldset >
	<legend> Produtos </legend>
	<div class = "">
	<table class="table table-striped">
  <thead>
    <tr>

		<th><%= "Produto" %></th>
		<th><%= "Preço Nominal" %></th> 
		<th><%= "Preço Promocional" %></th>
		<th><%= " Desconto" %></th>
		<th style="text-align:center"><%= t(:actions_name) %></th> 
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
	    <td><%= sale.product.name %></td>
        <td><%=  (number_to_currency(sale.product.regular_sale_price, :unit => "R$ ", :precision => 2, :separator => ",", :delimiter => ".")) %></td>
        <td><%=  (number_to_currency(sale.salePrice, :unit => "R$ ", :precision => 2, :separator => ",", :delimiter => ".")) %> </td>
		<td><%= ((1 - sale.salePrice.to_f/sale.product.regular_sale_price.to_f) * 100).to_s + "%"  %></td>
		
        <td>
			<div class="btn-group centralizada">
				<a class="btn btn-small btn-primary" href="/sales/<%= sale.id %>"><i class="icon-search icon-white"></i>Exibir</a>
				<a class="btn btn-small" href="/sales/<%= sale.id %>/edit"><i class="icon-pencil icon-gray"></i>Editar</a>
				<a class="btn btn-small  btn-danger" href="/sales/<%= sale.id %>" data-confirm="<%= "Deseja remover a Promoção?" %>" data-method="delete" rel="nofollow"><i class="icon-trash icon-white"></i>Remover</a>
			</div> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
	</div>
		<%= will_paginate @sales, :renderer => BootstrapPagination::Rails, :next_label => "Próxima", :previous_label => "Anterior", :update => 'tabela' %>
	</div>
</fieldset>
<% end %>